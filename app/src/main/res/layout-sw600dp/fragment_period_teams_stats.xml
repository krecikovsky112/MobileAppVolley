<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="callback"
            type="com.example.mobileappvolley.fragment.coach.FragmentPeriodTeamStats" />
    </data>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="590dp"
        android:padding="2dp"
        tools:context=".fragment.coach.FragmentPeriodTeamStats">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="100dp"
            android:fontFamily="@font/dongle_regular"
            android:text="Team performance in the last four matches"
            android:textAlignment="center"
            android:textColor="@color/main_color"
            android:textSize="50sp" />


        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChartAttackEffectivnes"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_below="@+id/title"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp" />



    </RelativeLayout>

</layout>