<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="callback"
            type="com.example.mobileappvolley.fragment.coach.FragmentChartStats" />
    </data>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="590dp"
        android:padding="2dp"
        tools:context=".fragment.coach.FragmentChartStats">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="200dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="200dp"
            android:fontFamily="@font/dongle_regular"
            android:text="Team stats"
            android:textAlignment="center"
            android:textColor="@color/main_color"
            android:textSize="50sp" />

        <ImageButton
            android:id="@+id/statsDisplay"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="900dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="22dp"
            android:background="@drawable/button_login"
            android:src="@drawable/cells" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartPoints"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/title"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="500dp" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartAttack"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/pieChartPoints"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="500dp" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartReceive"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/title"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="500dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartServe"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/pieChartPoints"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="500dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp" />


    </RelativeLayout>

</layout>