<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="callback"
            type="com.example.mobileappvolley.fragment.player.FragmentHomePlayer" />
    </data>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:padding="5dp"
        tools:context=".fragment.player.FragmentHomePlayer">

        <TextView
            android:id="@+id/titlePlayers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="40dp"

            android:fontFamily="@font/dongle_regular"
            android:text="Player info"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#17358b"
            android:textSize="80sp" />

        <LinearLayout
            android:id="@+id/card_player"
            android:layout_width="350dp"
            android:layout_height="330dp"

            android:layout_below="@+id/titlePlayers"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/shape_card"
            android:orientation="vertical" />

    </RelativeLayout>

</layout>